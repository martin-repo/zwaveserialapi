<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <Version>1.0.0-rc4</Version>
    <Authors>martin-repo</Authors>
    <Description>Provides classes for controlling Z-Wave network devices via a USB-stick.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://martin-repo.github.io/zwaveserialapi</PackageProjectUrl>
    <RepositoryUrl>https://github.com/martin-repo/zwaveserialapi</RepositoryUrl>
    <PackageTags>csharp dotnet zwave z-wave zstick z-stick serial api aeotec</PackageTags>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" Version="2.10.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ZWaveSerialApi\ZWaveSerialApi.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="readme.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
